class Solution {
public:
    void rotate(vector<int>& nums, int k) {
        int n = nums.size();
        k = k % n;  // To handle k > n
        vector<int> rotated(n);

        // Place each element at its rotated position
        for (int i = 0; i < n; i++) {
            rotated[(i + k) % n] = nums[i];
        }

        // Copy back to the original array
        for (int i = 0; i < n; i++) {
            nums[i] = rotated[i];
        }        
    }
};
